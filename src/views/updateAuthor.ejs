<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UPDATE AUTHOR</title>
    
    <!-- Google Fonts -->
    <link href="/css/css2.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom made CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <%for(let i=0;i<userNav.length;i++) {%>
                        <a class="nav-item nav-link" href="<%=userNav[i].link%> "><%=userNav[i].name%></a>
                    <%}%>
                </div>
            </div>
        </nav>
        <!-- /Navigation bar -->
        <h1><%=title%></h1>
    </header>
    <section class="page-content" id="updateAuthorSection">
        <div class="container">
            <h2 class="pt-3 text-center"><%=sub_title%> - <%=author.name%></h2>
            <!-- Form for updating an author -->
            <form class="lib-form" method="POST" action="/updateAuthor/update/<%=author._id%>" enctype="multipart/form-data">
                <div class="form-group row">
                    <label for="name" class="col-lg-2 col-md-2 col-sm-2 col-3 col-form-label">Author Name</label>
                    <input type="text" class="form-control col-lg-10 col-md-10 col-sm-10 col-9" id="name" name="name" value="<%=author.name%>">
                </div>
                <div class="form-group row">
                    <label for="language" class="col-lg-2 col-md-2 col-sm-2 col-3 col-form-label">Language</label>
                    <input type="text" class="form-control col-lg-10 col-md-10 col-sm-10 col-9" id="language" name="language" value="<%=author.language%>">
                </div>
                <div class="form-group row">
                    <label for="category" class="col-lg-2 col-md-2 col-sm-2 col-3 col-form-label">Category</label>
                    <input type="text" class="form-control col-lg-10 col-md-10 col-sm-10 col-9" id="category" name="category" value="<%=author.category%>">
                  </div>
                <div class="form-group row">
                    <label for="image" class="col-lg-2 col-md-2 col-sm-2 col-3 col-form-label">Author Image</label>
                    <input type="file" class="form-control col-lg-10 col-md-10 col-sm-10 col-9" id="image" name="image">
                    <label for="file upload error"><%=msg%></label></div>
                <div class="form-group btn-div">
                    <button type="submit" class="btn text-light mb-3 addBook">Update Author</button>
                </div>
            </form>
            <!-- /Form for updating an author -->
        </div>
    </section>
    <footer>
        <h3 class="text-secondary">Follow Us</h3><br>
        <nav aria-label="Social Media Links">
            <!-- Social media icons -->
            <ul class="pagination">
                <li class="page-item">
                    <a href="#" class="page-link bg-info text-light mr-0 border-right-0" id="twt-btn">Twitter</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link text-light ml-0 mr-0 border-left-0 border-right-0" id="fb-btn">Facebook</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link text-light ml-0 border-left-0" id="gplus-btn">Google+</a>
                </li>
            </ul>
            <!-- Social media icons -->
        </nav>
    </footer>

    <!-- Bootstrap Javascript, jQuery, and Popper.js -->
    <script src="/js/jquery-3.5.1.slim.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript File Link -->
    <script src="/js/signup.js"></script>
</body>
</html>